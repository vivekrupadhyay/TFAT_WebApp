@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" type="text/css" />
@section scripts{
    <script src="~/Scripts/i18n/grid.locale-en.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.jqGrid.min.js" type="text/javascript"></script>
    <script src="~/Scripts/App/ReportWritter.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/App/JQMenu.js"></script>
}
<div id="tabs" class="tabs-bottom">
    <ul>
        <li><a href="#tabs-1">Query</a></li>
        <li><a href="#tabs-2">Parameter</a></li>
        <li><a href="#tabs-3">Report</a></li>
        <li><a href="#tabs-4">Query Result</a></li>
    </ul>
    <div class="tabs-spacer"></div>
    <div id="tabs-1">
        <textarea id="txtQuery" name="txtQuery" style="height:250px;">@ViewBag.Query</textarea>
    </div>
    <div id="tabs-2">
        <div id="accordion">
            <h3>Select Query Parameter</h3>
            <div id="divPara">
            </div>
        </div>
    </div>
    <div id="tabs-3">
        <table id="list" cellpadding="0" cellspacing="0"></table>
        <div id="pager"></div>
    </div>
    <div id="tabs-4">
        <div id="divQueryResult">
        </div>
    </div>
</div>
